# API Keys (optional - for cloud services)
OPENAI_API_KEY=your_openai_api_key_here
REPLICATE_API_TOKEN=your_replicate_token_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Model Settings
MODEL_PROVIDER=local  # Options: local, openai, replicate
DEFAULT_MODEL=stable-diffusion-xl
DEVICE=cuda  # Options: cuda, cpu, mps (for Apple Silicon)

# Generation Settings
DEFAULT_RESOLUTION=1920x1080
DEFAULT_BATCH_SIZE=4
CONSISTENCY_LEVEL=strict  # Options: strict, moderate, loose
SEED_LOCKING=true

# Paths
MODELS_PATH=./models
CACHE_PATH=./output/cache
OUTPUT_PATH=./output/scenes

# Performance
MAX_WORKERS=4
CACHE_ENABLED=true
CACHE_TTL_HOURS=72

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ddna.log

# Development
DEBUG_MODE=false
SAVE_INTERMEDIATE_RESULTS=true